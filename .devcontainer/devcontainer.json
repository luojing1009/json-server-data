{
  "name": "JSON Server API",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode.vscode-json"]
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "JSON Server API",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "postCreateCommand": "npm install",
  "postStartCommand": "nohup node server.js > server.log 2>&1 &"
}
